<div class="panel-heading">
  <div class="search">
    <Input @type="text" @placeholder="Search by Author Name" @value={{this.search}} />
  </div>

  {{#if (can "create author")}}
    <LinkTo @route="author.create" class="btn-new">
      <div class="sr-only">Add New Author</div>
    </LinkTo>
  {{/if}}
</div>

<div class="panel-content">
  <h3 class="panel-title">Authors</h3>

  <ul class="collection">
    {{#each @model as |author|}}
      <AuthorListItem
        @first={{author.first}}
        @last={{author.last}}
        @authorId={{author.id}}
      />
    {{/each}}
  </ul>
</div>

<LiquidOutlet @class="slide-container"/>